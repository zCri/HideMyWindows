<Page
    x:Class="HideMyWindows.App.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:HideMyWindows.App.Helpers"
    xmlns:local="clr-namespace:HideMyWindows.App.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:system="clr-namespace:System;assembly=mscorlib"
    xmlns:processWatcher="clr-namespace:HideMyWindows.App.Services.ProcessWatcher"
    xmlns:windowWatcher="clr-namespace:HideMyWindows.App.Services.WindowWatcher"
    Title="SettingsPage"
    d:DataContext="{d:DesignInstance local:SettingsPage,
                                     IsDesignTimeCreatable=False}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    mc:Ignorable="d">
    <Page.Resources>
        <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <ObjectDataProvider
            x:Key="ProcessWatcherTypeValues"
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type
                    TypeName="processWatcher:ProcessWatcherType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider
            x:Key="WindowWatcherTypeValues"
            MethodName="GetValues"
            ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type
                    TypeName="windowWatcher:WindowWatcherType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel
            HorizontalAlignment="Left"
            Grid.Row="0">
            <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Text="Functionality" />
            <ui:ToggleSwitch                                                                               
                IsChecked="{Binding ViewModel.ConfigProvider.Config.HideSelf}"
                Margin="0,12,0,0"
                Content="Hide this app automatically"/>

            <Label Margin="0,16,0,0">Process watching method</Label>
            <ComboBox
                Margin="0,6,0,0"
                ItemsSource="{Binding Source={StaticResource ProcessWatcherTypeValues}}"
                SelectedItem="{Binding ViewModel.ProcessWatcherType}"/>
            
            <Label Margin="0,16,0,0">Window watching method</Label>
            <ComboBox
                Margin="0,6,0,0"
                ItemsSource="{Binding Source={StaticResource WindowWatcherTypeValues}}"
                SelectedItem="{Binding ViewModel.WindowWatcherType}"/>

            <TextBlock
            FontSize="20"
            FontWeight="Medium"
            Margin="0,24,0,0"
            Text="Personalization" />
            <Label Margin="0,12,0,0">Theme</Label>
            <RadioButton
            Margin="0,12,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_light"
            Content="Light"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.ConfigProvider.Config.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Light, Mode=OneWay}" />
            <RadioButton
            Margin="0,8,0,0"
            Command="{Binding ViewModel.ChangeThemeCommand, Mode=OneWay}"
            CommandParameter="theme_dark"
            Content="Dark"
            GroupName="themeSelect"
            IsChecked="{Binding ViewModel.ConfigProvider.Config.CurrentTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Dark, Mode=OneWay}" />

            <TextBlock
            Margin="0,24,0,0"
            FontSize="20"
            FontWeight="Medium"
            Text="About HideMyWindows" />
            <Label Margin="0,12,0,0" Content="{Binding ViewModel.AppVersion, Mode=OneWay}" />
        </StackPanel>
        <ui:Button
            Grid.Row="1"
            Icon="{ui:SymbolIcon Save24}"
            Appearance="Primary"
            HorizontalAlignment="Right"
            Margin="0,0,0,20"
            Content="Save settings"
            Command="{Binding ViewModel.SaveConfigCommand}"/>
    </Grid>
</Page>
