<Window x:Class="HideMyWindows.TestTarget.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HideMyWindows Target Test App" Height="310" Width="400">
    <StackPanel Margin="20">
        <TextBlock Text="Target Application" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <TextBlock x:Name="StatusText" Text="Status: Visible (Affinity 0)" Margin="0,0,0,10"/>
        <TextBlock Text="Use buttons below to simulate app behavior:" Margin="0,0,0,10"/>

        <Button x:Name="BtnHide" Content="Set Affinity (Hide from Capture)" Click="BtnHide_Click" Margin="0,5"/>
        <Button x:Name="BtnShow" Content="Clear Affinity (Show in Capture)" Click="BtnShow_Click" Margin="0,5"/>
        
        <CheckBox x:Name="ChkPersistent" Content="Persistently Re-apply Hide (Every 1s)" Margin="0,15,0,0"/>

        <Button x:Name="BtnFork" Content="Fork process" Click="BtnFork_Click" Margin="0,15"/>
    </StackPanel>
</Window>
